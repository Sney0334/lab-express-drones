<h2>Update the drone</h2>

<form method="post" action="/drones/{{drone.id}}/edit">
    <label for='name'>Name</label>
    <input type='text' value='{{drone.name}}' name='name' />

    <label for='propellers'>No of propellers</label>
    <input type='text' value='{{drone.propellers}}' name='propellers' />

    <label for='maxSpeed'>Max speed</label>
    <input type='text' value='{{drone.maxSpeed}}'name='maxSpeed' />

</form>